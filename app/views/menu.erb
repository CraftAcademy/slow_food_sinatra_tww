
<div>
  <h1><%= @menu.name %></h1>
  <% @menu.products.each do |product| %>
    <% if product.catagory == 'Starter' %>
        <div class="startes">
            <h1><%= product.catagory %></h1>
            <h3><%= product.name %></h3>
            <p> <%= product.description%> </p>
            <p> <%= product.price%> </p>
        </div>
    <% end %>
    <% if product.catagory == 'Main Course' %>
        <div class="main-course">
          <h1><%= product.catagory %></h1>
          <h3><%= product.name %></h3>
          <p> <%= product.description%> </p>
          <p> <%= product.price%> </p>
        </div>
      <% end %>
    <% if product.catagory == 'Dessert' %>
        <div class="dessert">
          <h1><%= product.catagory %></h1>
          <h3><%= product.name %></h3>
          <p> <%= product.description%> </p>
          <p> <%= product.price%> </p>
        </div>
    <% end %>
  <% end %>
</div>
